<?xml version="1.0"?>
<odoo>
    <!-- Agrego campo Untaxed Amount en la vista de lista de Payments. -->
    <data>
        <record id="dnk_account_usd_payment_tree_view" model="ir.ui.view">
            <field name="name">dnk_account_usd_payment_tree_view</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_tree"/>
            <field name="arch" type="xml">
                <field name="amount" position="before">
                    <field name="dnk_usd_amount" sum="-Total USD Amount" />
                </field>
            </field>
        </record>
    </data>
</odoo>
