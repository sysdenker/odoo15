<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
      <record id="dnk_sale_cost_mrp_prod_form" model="ir.ui.view">
          <field name="name">dnk_sale_cost_mrp_prod_form</field>
          <field name="model">mrp.production</field>
          <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
          <field name="arch" type="xml">
              <xpath expr="//notebook" position="inside">
                  <page string="Costs">
                      <group>
                          <group>
                              <field name="dnk_amount" />
                              <field name="dnk_price" />
                              <field name="dnk_to_consume" />
                          </group>
                          <group>
                              <field name="dnk_time_perpiece"/>
                              <field name="dnk_time_allpieces"/>
                          </group>
                      </group>
                  </page>
              </xpath>

              <xpath expr="//field[@name='company_id']" position="after">
                  <field name="dnk_price" />
                  <field name="dnk_to_consume" />
              </xpath>
          </field>
      </record>
  </data>
</odoo>
