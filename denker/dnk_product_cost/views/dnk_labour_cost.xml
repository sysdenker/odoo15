<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="dnk_labour_cost_tree_view" model="ir.ui.view">
        <field name="name">dnk_labour_cost_tree_view</field>
        <field name="model">dnk.labour.cost</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <tree string="Labour Cost">
                <field name="dnk_name"/>
                <field name="dnk_description"/>
                <field name="dnk_unit_price_usd"/>
            </tree>
        </field>
    </record>

    <record id="dnk_labour_cost_form_view" model="ir.ui.view">
        <field name="name">dnk_labour_cost_form_view</field>
        <field name="model">dnk.labour.cost</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <form string="Labour Cost">
            <sheet>
                <div class="oe_title">
                    <label for="dnk_name" class="oe_edit_only"  string="- Labour Cost"/>
                    <h1><field name="dnk_name"/></h1>
                </div>
                <group>
                    <label for="dnk_description"/>
                    <field name="dnk_description"/>
                    <group>
                        <field name="dnk_unit_price_usd"/>
                    </group>
                </group>
            </sheet>
            </form>
        </field>
    </record>

    <record id="dnk_action_labour_cost" model="ir.actions.act_window">
        <field name="name">Labour Cost</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">dnk.labour.cost</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create a Labour Cost, the first step of a Product Labour Cost Lines.
            </p>
        </field>
    </record>

    <record id="action_labour_cost_tree" model="ir.actions.act_window.view">
        <field eval="1" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="dnk_labour_cost_tree_view"/>
        <field name="act_window_id" ref="dnk_action_labour_cost"/>
    </record>

    <record id="action_labour_cost_form" model="ir.actions.act_window.view">
        <field eval="1" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="dnk_labour_cost_form_view"/>
        <field name="act_window_id" ref="dnk_action_labour_cost"/>
    </record>

    <menuitem action="dnk_action_labour_cost"
        id="menu_labour_cost" name="- Labour Cost"
        parent="menu_dnk_cost" sequence="5"/>

</odoo>
