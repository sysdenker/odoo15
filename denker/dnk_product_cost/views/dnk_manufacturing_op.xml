<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Operaciones -->
    <record id="dnk_manufacturing_op_tree_view" model="ir.ui.view">
        <field name="name">dnk_manufacturing_op_tree_view</field>
        <field name="model">dnk.manufacturing.op</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <tree string="Manufacturing Operations">
                <field name="name"/>
                <field name="dnk_family_ids" widget="many2many_tags"/> 
                <field name="description"/>
                <field name="dnk_equipment_id"/>
                <field name="dnk_time"/>
                <field name="dnk_help" widget="url"/>
            </tree>
        </field>
    </record>

    <record id="dnk_manufacturing_op_form_view" model="ir.ui.view">
        <field name="name">dnk_manufacturing_op_form_view</field>
        <field name="model">dnk.manufacturing.op</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <form string="Manufacturing Operations">
            <sheet>
                <div class="oe_title">
                    <label for="name" string="- Manufacturing Operations"/>
                    <h1><field name="name"/></h1>
                </div>
                <group>
                    <field name="dnk_family_ids" widget="many2many_tags"/>
                    <field name="dnk_equipment_id"/>
                    <field name="dnk_time"/>
                    <field name="dnk_help" widget="url"/>
                    <field name="description"/>
                    
                </group>
            </sheet>
            </form>
        </field>
    </record>

    <record id="dnk_action_manufacturing_op" model="ir.actions.act_window">
        <field name="name">Manufacturing Operations</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">dnk.manufacturing.op</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create a Manufacturing Operations, the first step of a Product Manufacturing Operations Lines.
            </p>
        </field>
    </record>

    <record id="action_manufacturing_op_tree" model="ir.actions.act_window.view">
        <field eval="1" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="dnk_manufacturing_op_tree_view"/>
        <field name="act_window_id" ref="dnk_action_manufacturing_op"/>
    </record>

    <record id="action_manufacturing_op_form" model="ir.actions.act_window.view">
        <field eval="1" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="dnk_manufacturing_op_form_view"/>
        <field name="act_window_id" ref="dnk_action_manufacturing_op"/>
    </record>

    <menuitem action="dnk_action_manufacturing_op"
        id="menu_manufacturing_op" name="- Manufacturing Operations"
        parent="menu_dnk_cost" sequence="5"/>


    <!--Operaciones del producto -->
    <record id="dnk_product_op_tree_view" model="ir.ui.view">
        <field name="name">dnk_product_op_tree_view</field>
        <field name="model">dnk.product.op</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <tree string="Product Operations">
                <field name="name" invisible="1"/>
                <field name="dnk_product_tmpl_id"/>
                <field name="dnk_family_id"/>
                <field name="dnk_manufacturing_op_dom" invisible="1"/>
                <field name="dnk_manufacturing_op_id"/> 
                <field name="dnk_equipment_id"/>
                <field name="dnk_people_inv_qty"/>
                <field name="dnk_time"/>
                <field name="dnk_help" widget="url"/>
            </tree>
        </field>
    </record>

    <record id="dnk_product_op_form_view" model="ir.ui.view">
        <field name="name">dnk_product_op_form_view</field>
        <field name="model">dnk.product.op</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <form string="Product Operations">
            <sheet>
                <div class="oe_title">
                    <label for="name" string="- Manufacturing Operations"/>
                    <h1><field name="name" readonly="1" force_save="1"/></h1>
                </div>
                <group>
                    <field name="dnk_product_tmpl_id"/>
                    <field name="dnk_family_id"/>
                    <field name="dnk_manufacturing_op_dom" invisible="1"/>
                    <field name="dnk_manufacturing_op_id"/>
                    <field name="dnk_equipment_id"/>
                    <field name="dnk_people_inv_qty"/>
                    <field name="dnk_time"/>
                    <field name="dnk_help" widget="url"/>
                </group>
            </sheet>
            </form>
        </field>
    </record>

    <record id="dnk_action_product_op" model="ir.actions.act_window">
        <field name="name">Product Operations</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">dnk.product.op</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create a Product Operations, the first step of a Product Manufacturing Operations Lines.
            </p>
        </field>
    </record>

    <record id="action_product_op_tree" model="ir.actions.act_window.view">
        <field eval="1" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="dnk_product_op_tree_view"/>
        <field name="act_window_id" ref="dnk_action_product_op"/>
    </record>

    <menuitem action="dnk_action_product_op"
        id="menu_product_op" name="- Product Operations"
        parent="menu_dnk_cost" sequence="6"/>

</odoo>
