<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="dnk_view_update_denker_commercial_cost" model="ir.ui.view">
            <field name="name">dnk_view_update_denker_commercial_cost</field>
            <field name="model">dnk.product.commercial.cost</field>
            <field name="arch" type="xml">
              <form string="Update Denker Commercial Cost">
                  <separator string="Update Cost"/>
                  <group>
                          <span>Actualizar costo comercial relacionado al costo del producto.</span>
                          <field name="dnk_product_id" invisible="1" string="Product"/>
                          <field name="dnk_prev_cost" invisible="1" string="Previous Cost"/>
                          <field name="dnk_new_cost" invisible="1" string="New Cost"/>
                          <field name="dnk_update_percent"/>

                  </group>
                  <footer>
                      <button name="change_dnk_commercial_cost" type="object" string="Update" class="btn-primary" />
                      <button string="Cancel" class="btn-secondary" special="cancel" />
                  </footer>
              </form>
            </field>
        </record>

        <record id="action_view_update_commercial_cost" model="ir.actions.act_window">
            <field name="name">- Update Dnk Commercial. Cost</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">dnk.product.commercial.cost</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="dnk_view_update_denker_commercial_cost"/>
            <field name="binding_model_id" ref="product.model_product_product"/>
            <field name="target">new</field>
        </record>

    </data>
</odoo>
