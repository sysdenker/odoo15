<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="dnk_employee_contract_paperformat" model="report.paperformat">
        <field name="name">Employee Contract Paper Formar</field>
        <field name="format">Letter</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">20</field>
        <field name="margin_bottom">20</field>
        <field name="margin_left">21</field>
        <field name="margin_right">16</field>
        <field name="header_spacing">12</field>
        <field name="dpi">90</field>
    </record>

    <report
        id="report_contract"
        model="hr.contract"
        string="Contract"
        print_report_name="'Contrato - '+ ((object.x_dnk_type or '') + ' - ' + (object.employee_id.name or ''))"
        report_type="qweb-pdf"
        name="dnk_hr_custom_employee.hr_report_contract_document"
        file="report_contract"
        attachment_use="True"
        attachment="(object.state in ('open','paid')) and
            ('contract_'+(object.name or '').replace('/','')+'.pdf')"
        paperformat="dnk_hr_custom_employee.dnk_employee_contract_paperformat"
    />
</odoo>
