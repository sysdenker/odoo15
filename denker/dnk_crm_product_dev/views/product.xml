<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="dnk_product_tmpl_product_dev_form_view" model="ir.ui.view">
        <field name="name">dnk_product_tmpl_product_dev_form_view</field>
        <field name="model">product.template</field>
        <field name="groups_id" eval="[(4, ref('dnk_crm_product_dev_user_group'))]"/>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button class="oe_stat_button" type="action"
                        name="%(dnk_crm_product_dev.dnk_pd_product_tmpl_action)d" icon="fa-pencil-square-o"
                        context="{'default_dnk_product_tmpl_id': active_id}">
                    <div class="o_stat_info">
                        <field name="dnk_pdev_qty" class="o_stat_value"/>
                        <span class="o_stat_text"> DP(s) </span>
                    </div>
                </button>
            </div>
        </field>
    </record>
</odoo>
