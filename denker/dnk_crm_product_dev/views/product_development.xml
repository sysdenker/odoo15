  <record id="dnk_crm_pd_stage_form_view_1" model="ir.ui.view">
       <field name="name">dnk_crm_pd_stage_form_view_1</field>
       <field name="model">dnk.crm.pd.stage</field>
       <field name="arch" type="xml">
           <form string="- Etapas del Desarrollo de Productos" >
           <sheet>
              <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
