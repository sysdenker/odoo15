  <record id="dnk_crm_pd_stage_tree_view_1" model="ir.ui.view">
       <field name="name">dnk_crm_pd_stage_tree_view_1</field>
       <field name="model">dnk.crm.pd.stage</field>
       <field name="arch" type="xml">
           <tree string="- Etapas del Desarrollo de Productos" multi_edit="1">
               <field name="sequence" widget="handle" />
