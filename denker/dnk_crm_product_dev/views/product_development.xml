<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="dnk_crm_pd_form_view" model="ir.ui.view">
      <field name="name">dnk_crm_pd_form_view</field>
      <field name="model">dnk.crm.product.dev</field>
      <field name="arch" type="xml">
          <form string="Desarrollo de Productos" create="false" class="o_sale_order">
            <header>
              <field name="dnk_line_count" invisible="1"/>
              <field name="dnk_stage_id" widget="statusbar"
                  options="{'clickable': '1', 'fold_field': 'fold'}"
                  domain="[]"
                  attrs="{'invisible': [('active', '=', False)]}"/>
            </header>
            <sheet>
              <div class="oe_button_box" name="button_box">
                <button type="object" name="dnk_crm_pdev_stage_hist_action" class="oe_stat_button" icon="fa-bars" attrs="{'invisible': [('dnk_line_count', '=', 0)]}">
                  <span>Stage Changes</span>
                </button>
                <button type="object" name="dnk_crm_pdev_plm_action" class="oe_stat_button" icon="fa-refresh" attrs="{'invisible': [('dnk_line_count', '=', 0)]}">
                  <field name="dnk_mrp_eco_count" widget="statinfo" string="PLM's"/>
                </button>
                <button type="object" name="action_pdev_mo_view" class="oe_stat_button" icon="fa-wrench" attrs="{'invisible': [('dnk_line_count', '=', 0)]}">
                  <field name="dnk_mrp_prod_count" widget="statinfo" string="MO's"/>
                </button>
                <button type="object" name="action_pdev_delivery_view" class="oe_stat_button" icon="fa-truck" attrs="{'invisible': [('dnk_line_count', '=', 0)]}">
                  <field name="dnk_delivery_count" widget="statinfo" string="Delivery"/>
                </button>
              </div>
              <div class="oe_title">
                <h1>
                  <strong>[<field name="id"/>] </strong><field name="name" required="1"/>
                  <field name="active" default="True" required="True" invisible="1"/>
                </h1>
              </div>
              <group>
                <group name="info_crm_lead" string="Información de la Oportunidad">
                    <field name="dnk_stage_type" readonly="1" invisible="1"/>
                    <field name="dnk_lead_id" readonly="1"/>
                    <field name="dnk_expected_revenue" readonly="1"/>
                    <field name="dnk_lead_stage" readonly="1"/>
                    <field name="dnk_sale_order_id" readonly="1" invisible="1"/>
                    <field name="dnk_user_id" readonly="1"/>
                    <field name="dnk_company_id" readonly="1" invisible="1"/>
                    <field name="dnk_team_id" readonly="1" />
                    <field name="currency_id" readonly="1"  invisible="1"/>
                    <field name="dnk_family_id" readonly="1"  invisible="0"/>
                    <field name="dnk_subfamily_id" readonly="1" invisible="1"/>
                    <field name="dnk_categ_type" invisible="1" />
                    <div class="o_horizontal_separator">Ventas - Información Productos</div>
                    <field name="dnk_delivery_address_id" widget="res_partner" attrs="{'default_type':'delivery','show_address': 1}"/>
                    <field name="dnk_new_product" widget="boolean_toggle"/>
                    <field name="dnk_pd_version" readonly="1"/>
                </group>
                <group name="info_ingenieria" string="Captura de Ingeniería">
                  <field name="dnk_pd_type_id"/>
                  <field name="dnk_project_id"/>
                  <field name="dnk_final_spec"/>
                  <field name="dnk_model"/>
                  <field name="dnk_folder"/>
                </group>
              </group>

              <notebook name="desc_pdev_line_notebook">
                <page string="Product Lines" name="dnk_product_lines">
                  <field
                    name="dnk_product_ids"
                    widget="section_and_note_one2many"
                    mode="tree,kanban">
                    <form id="dnk_pdev_line_form_view">
                      <sheet>

                        <group>
                          <group name="dnk_product_info_left" string= "Línea de Producto">
                            <field name="dnk_new_product"  invisible="1"/>
                            <field name="name"  force_save="1" readonly="1" />
                            <field name="dnk_family_id" readonly="1"  invisible="1"/>
                            <field name="dnk_product_id" attrs="{'invisible': [('dnk_new_product','=', True)]}"/>
                            <field name="dnk_new_default_code" force_save="1" readonly="1" widget="text" attrs="{'invisible': [('dnk_new_product','=', False)]}"/>
                            <field name="dnk_subfamily_id" force_save="1" readonly="1" invisible="0"/>
                          </group>
                          <group name="dnk_det_prod_right" string="Captura Ingeniería">
                              <field name="dnk_new_dev"  widget="boolean_toggle"/>
                              <field name="dnk_ps_qty_desc" widget="text"/>
                          </group>
                          <group name="dnk_sale_det_right" string="Captura Ventas">
                              <field name="dnk_ps_price_required" widget="boolean_toggle"/>
                              <field name="dnk_ps_required" widget="boolean_toggle"/>
                              <field name="dnk_price" force_save="1" attrs="{'invisible': [('dnk_categ_type','=', 'bata')]}"/>
                              <field name="dnk_ps_qty"/>
                              <field name="dnk_ps_delivery_date" attrs="{'invisible': [('dnk_ps_required','=', False)]}"/>
                              <field name="dnk_ps_tracking_ref"/>

                              <field name="dnk_categ_type" invisible="1"/>
                          </group>

                        </group>
                        <notebook name="desc_pdev_notebook">
                          <page string="Bata" name="dnk_bata_info" attrs="{'invisible': ['|', ('dnk_categ_type','!=', 'bata'), ('dnk_new_product','=', False)]}">
                            <group>
                              <group>
                                <!--<field name="dnk_fabric_color_ids" widget="many2many_tags" options="{'color_field': 'html_color'}"/>-->
                                <field name="dnk_fabric_type_dom" invisible="1"/>
                                <field name="dnk_fabric_type_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}"/>
                                <field name="dnk_fabric_color_dom" invisible="1"/>
                                <field name="dnk_fabric_color_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}" attrs="{'readonly': [('dnk_fabric_type_id','=', False)]}"/>
                                <field name="dnk_fabric_cutting_dom" invisible="1"/>
                                <field name="dnk_fabric_cutting_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}" attrs="{'readonly': [('dnk_fabric_type_id','=', False)]}"/>
                                <field name="dnk_size_dom" invisible="1"/>
                                <field name="dnk_size_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}" attrs="{'readonly': [('dnk_fabric_type_id','=', False)]}"/>
                                <field name="dnk_embroidery" widget="text"/>

                                <field name="dnk_additional_atts_dom" invisible="1"/>
                                <field name="dnk_additional_atts_ids" widget="many2many_tags" string="- Attributes" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True, 'color_field': 'html_color'}"/>
                                <field name="dnk_att_count" invisible="1"/>
                                <field name="dnk_description" widget="text" string="- Additional Attributes"/>
                                <button string="- Get Model" name="bttn_get_model" type="object" attrs="{'invisible': [('dnk_att_count','>', 2)]}"/>
                              </group>
                              <group>
                                <field name="dnk_pricelist_dom" invisible="1"/>
                                <field name="dnk_pricelist_id" />
                                <field name="dnk_pricelist_item_id" />
                                <field name="dnk_extra_price" />
                                <field name="dnk_price_detail" widget="html" force_save="1" readonly="1"/>
                                <field name="dnk_price" force_save="1" readonly="1"/>
                              </group>
                            </group>
                          </page>
                          <page string="Bolsa" name="dnk_bolsa_info" attrs="{'invisible': ['|', ('dnk_categ_type','!=', 'bolsa'), ('dnk_new_product','=', False)]}">
                            <group>
                                <group>
                                  <field name="dnk_color_approval"/>
                                  <field name="dnk_bag_type_dom" invisible="1"/>
                                  <field name="dnk_bag_type_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}"/>
                                  <field name="dnk_bag_style_dom" invisible="1"/>
                                  <field name="dnk_bag_style_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}"/>
                                  <field name="dnk_bag_use" widget="text" attrs="{'invisible': [('dnk_bag_type_id','!=', 'BE ZZ - Bolsa Impresa')]}"/>
                                  <field name="dnk_bag_design_dom" invisible="1"/>
                                  <field name="dnk_bag_design_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}"/>
                                  <field name="dnk_uom_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}"/>
                                  <field name="dnk_width" />
                                  <field name="dnk_length" />
                                  <field name="dnk_bag_gusset" />
                                  <field name="dnk_bag_gauge" />
                                </group>
                                <group>
                                  <field name="dnk_description" string="- Specifications"  widget="text"/>
                                  <field name="dnk_attach_dom" invisible="1"/>
                                  <field name="dnk_attach_ids"  widget="many2many_checkboxes"  options="{'no_quick_create':True,'no_create_edit':True,'no_open': True, 'color_field': 'html_color'}"/>
                                </group>
                              </group>
                          </page>
                          <page string="Equipo" name="dnk_equipo_info" attrs="{'invisible': ['|', ('dnk_categ_type','!=', 'equipo'), ('dnk_new_product','=', False)]}">
                            <group>
                              <field name="dnk_brand" />
                              <field name="dnk_supplier" />
                              <field name="dnk_reference" />
                              <field name="dnk_description"  widget="text" />
                            </group>
                          </page>
                          <page string="Servicio" name="dnk_servicio_info" attrs="{'invisible': ['|', ('dnk_categ_type','!=', 'servicio'), ('dnk_new_product','=', False)]}">
                            <group>
                              <field name="dnk_serv_type_dom" invisible="1"/>
                              <field name="dnk_serv_type_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}"/>
                              <field name="dnk_description"  widget="text"/>
                            </group>
                          </page>
                          <page string="Empaque" name="dnk_empaque_info" attrs="{'invisible': ['|', ('dnk_categ_type','!=', 'empaque'), ('dnk_new_product','=', False)]}">
                            <group>
                              <field name="dnk_material_dom" invisible="1"/>
                              <field name="dnk_material_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}"/>
                              <field name="dnk_uom_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}"/>

                              <field name="dnk_length" />
                              <field name="dnk_width" />
                              <field name="dnk_thickness" />
                              <field name="dnk_cavities_qty" />
                              <field name="dnk_description"  widget="text"/>
                              <field name="dnk_attach_dom" invisible="1"/>
                              <field name="dnk_attach_ids" widget="many2many_checkboxes" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True, 'color_field': 'html_color'}"/>

                            </group>
                          </page>
                          <page string="Overol" name="dnk_overol_info" attrs="{'invisible': ['|', ('dnk_categ_type','!=', 'overol'), ('dnk_new_product','=', False)]}">
                            <group>
                              <field name="dnk_fabric_type_dom" invisible="1"/>
                              <field name="dnk_fabric_type_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}"/>
                              <field name="dnk_fabric_color_dom" invisible="1"/>
                              <field name="dnk_fabric_color_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}"/>
                              <field name="dnk_garmet_identifier"  widget="text"/>
                              <field name="dnk_description"  widget="text"/>
                            </group>
                          </page>
                          <page string="Prenda" name="dnk_prenda_info" attrs="{'invisible': ['|', ('dnk_categ_type','!=', 'prenda'), ('dnk_new_product','=', False)]}">
                            <group>
                              <field name="dnk_fabric_type_dom" invisible="1"/>
                              <field name="dnk_fabric_type_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}"/>
                              <field name="dnk_fabric_color_dom" invisible="1"/>
                              <field name="dnk_fabric_color_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}"/>
                              <field name="dnk_garmet_identifier"  widget="text"/>
                              <field name="dnk_description"  widget="text"/>
                            </group>
                          </page>
                          <page string="New" name="dnk_otros_info" attrs="{'invisible': ['|', ('dnk_categ_type','!=', 'otro'), ('dnk_new_product','=', False)]}">
                            <group>
                              <field name="dnk_description"  string = "- Details" widget="text"/>
                            </group>
                          </page>
                        </notebook>
                      </sheet>
                    </form>
                    <tree
                      string="Product Lines">
                        <field name="dnk_new_product"  invisible="1"/>
                        <field name="name"/>
                        <field name="dnk_price"/>
                        <field name="dnk_ps_qty"/>
                        <field name="dnk_ps_delivery_date"/>
                        <field name="dnk_ps_tracking_ref"/>
                    </tree>
                  </field>
                </page>
                <page string="Other Info" name="dnk_other_info_page">
                  <group>
                      <group string="Update Info">
                        <field name="create_uid"  wizard="many2one_avatar_user"/>
                        <field name="create_date"/>
                        <field name="write_uid"  wizard="many2one_avatar_user"/>
                        <field name="__last_update"/>
                      </group>
                      <group string="General Info">
                        <field name="dnk_company_id"  wizard="many2one_avatar_user"/>
                        <field name="dnk_family_id"/>
                        <field name="dnk_team_id" />
                        <field name="dnk_customer_serv_id"  wizard="many2one_avatar_user"/>
                      </group>
                  </group>
                </page>
              </notebook>
            </sheet>
            <div class="oe_chatter">
                <field name="message_follower_ids" widget="mail_followers"/>
                <field name="activity_ids" widget="mail_activity"/>
                <field name="message_ids" widget="mail_thread"/>
            </div>
          </form>
      </field>
  </record>

  <record id="dnk_crm_pd_kanban_view" model="ir.ui.view">
            <field name="name">dnk_crm_pd_dnk_pd_type_idkanban_view</field>
            <field name="model">dnk.crm.product.dev</field>
            <field name="priority" eval="100"/>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile" default_group_by="dnk_stage_id" create="false" quick_create="false" archivable="false" js_class="crm_kanban" sample="1">
                    <field name="name"/>
                    <field name="dnk_stage_id"/>
                    <field name="dnk_user_id"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_content oe_kanban_global_click">
                                <div>
                                    <strong class="o_kanban_record_title"><span>[<field name="id"/>] <field name="name"/></span></strong>
                                </div>
                                <div>
                                    <span class="o_kanban_record_subtitle"><field name="dnk_lead_id"/></span>
                                </div>
                                <!--<div>
                                  <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                </div>-->
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                      <span class="o_kanban_record_subtitle">#<field name="dnk_line_count"/></span>
                                        <!--<field name="priority" widget="priority"/>-->
                                        <!--<div class="o_kanban_inline_block">
                                            <field name="activity_ids" widget="kanban_activity"/>
                                        </div>-->
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="dnk_user_id" widget="many2one_avatar_user"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

  <record id="dnk_crm_pd_tree_view" model="ir.ui.view">
      <field name="name">dnk_crm_pd_tree_view</field>
      <field name="model">dnk.crm.product.dev</field>
      <field name="arch" type="xml">
          <tree string="- Desarrollo de Productos" create="false">
