                <field name="active" invisible="1"/>
                <field name="name" force_save="1" readonly="1"/>
                <field name="dnk_stage_type" />
                <field name="sequence" />
                <field name="dnk_description" />
                <field name="dnk_department" />
                <field name="fold"/>
              </group>
           </sheet>
           </form>
       </field>
  </record>

