      <field name="res_model">dnk.crm.product.dev</field>
      <field name="view_id" ref="dnk_crm_pd_kanban_view"/>
      <field name="view_mode">kanban,tree,form</field>
  </record>

  <record id="dnk_create_pd_from_lead" model="ir.actions.act_window">
