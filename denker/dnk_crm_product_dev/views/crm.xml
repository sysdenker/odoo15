<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="dnk_product_development_form_view_1" model="ir.ui.view">
        <field name="name">dnk_product_development_form_view_1</field>
        <field name="model">crm.lead</field>
        <field name="groups_id" eval="[(4, ref('dnk_crm_product_dev_user_group'))]"/>
        <field name="inherit_id" ref="crm.crm_lead_view_form" />
        <field name="arch" type="xml">
            <header position="inside">
                <button string="- New DP" name="%(dnk_crm_product_dev.dnk_create_pd_from_lead)d" type="action" class="oe_highlight"
                    context="{'default_dnk_lead_id': active_id}"/>
            </header>
            <div name="button_box" position="inside">
                <button class="oe_stat_button" type="action"
                        name="%(dnk_crm_product_dev.dnk_pd_lead_action)d" icon="fa-pencil-square-o"
                        context="{'default_dnk_lead_id': active_id}">
                    <div class="o_stat_info">
                        <field name="dnk_pd_quantity" class="o_stat_value"/>
                        <span class="o_stat_text"> DP(s) </span>
                    </div>
                </button>
            </div>
        </field>
    </record>

</odoo>
