<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Vendor Status -->
    <record id="dnk_vendor_status_tree_view" model="ir.ui.view">
        <field name="name">dnk_vendor_status_tree_view</field>
        <field name="model">dnk.vendor.status</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <tree string="Vendor Status">
                <field name="sequence" widget='handle'/>
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="dnk_vendor_status_form_view_mod" model="ir.ui.view">
        <field name="name">dnk_vendor_status_form_view_mod</field>
        <field name="model">dnk.vendor.status</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <form string="Vendor Status">
            <sheet>
                <div class="oe_title">
                    <label for="name" string="- Vendor Status"/>
                    <h1><field name="name"/></h1>
                </div>
                <group>
                    <field name="description"/>
                </group>
            </sheet>
            </form>
        </field>
    </record>

    <record id="dnk_action_vendor_status" model="ir.actions.act_window">
        <field name="name">Vendor Status</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">dnk.vendor.status</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create a Vendor Status.
            </p>
        </field>
    </record>

    <record id="action_vendor_status_tree" model="ir.actions.act_window.view">
        <field eval="1" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="dnk_vendor_status_tree_view"/>
        <field name="act_window_id" ref="dnk_action_vendor_status"/>
    </record>

    <record id="action_vendor_status_form" model="ir.actions.act_window.view">
        <field eval="1" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="dnk_vendor_status_form_view_mod"/>
        <field name="act_window_id" ref="dnk_action_vendor_status"/>
    </record>

    <menuitem action="dnk_action_vendor_status"
        id="menu_vendor_status" name="- Vendor Status"
        parent="purchase.menu_purchase_config" sequence="5"/>
</odoo>