<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="dnk_account_credit_limit_sale_order_form_view" model="ir.ui.view">
            <field name="name">dnk_account_credit_limit_sale_order_form_view</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <field name="payment_term_id" position="attributes" >
                    <attribute name="attrs">{}</attribute>
                    <attribute name="required">1</attribute>
                </field>
                <field name="payment_term_id" position="after">
                    <field name="dnk_permitted_limit_exceeded" readonly="1"/>
                    <field name="dnk_paid_sale_order" readonly="1"/>
                </field>
            </field>
        </record>

        <record id="dnk_account_admin_credit_limit_sale_order_form_view" model="ir.ui.view">
            <field name="name">dnk_account_admin_credit_limit_sale_order_form_view</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="dnk_account_credit_limit_sale_order_form_view"/>
            <field name="groups_id" eval="[(4, ref('dnk_account_credit_limit.dnk_account_credit_limit_group'))]"/>
            <field name="arch" type="xml">
                <field name="dnk_permitted_limit_exceeded" position="attributes">
                    <attribute name="readonly">0</attribute>
                </field>
                <field name="dnk_paid_sale_order" position="attributes">
                    <attribute name="readonly">0</attribute>
                </field>
            </field>
        </record>
    </data>
</odoo>
