<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="dnk_account_credit_limit_stock_picking_form_view" model="ir.ui.view">
            <field name="name">dnk_account_credit_limit_stock_picking_form_view</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <field name="origin" position="after">
                    <field name="dnk_allow_delivery" readonly="1"/>
                </field>
            </field>
        </record>

        <record id="dnk_account_admin_credit_limit_stock_picking_form" model="ir.ui.view">
            <field name="name">dnk_account_admin_credit_limit_stock_picking_form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="dnk_account_credit_limit_stock_picking_form_view"/>
            <field name="groups_id" eval="[(4, ref('dnk_account_credit_limit.dnk_account_credit_limit_group'))]"/>
            <field name="arch" type="xml">
                <field name="dnk_allow_delivery" position="attributes">
                    <attribute name="readonly">0</attribute>
                </field>
            </field>
        </record>
    </data>
</odoo>
