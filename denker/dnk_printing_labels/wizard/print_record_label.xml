<odoo>
    <record id="view_wizard_print_product_label_form" model="ir.ui.view">
        <field name="name">dnk.wizard.print.record.label.form</field>
        <field name="model">dnk.wizard.print.record.label</field>
        <field name="arch" type="xml">
            <form string="- Print Labels">
                <group>
                    <field name="dnk_label_group_id" invisible="1"/>
                    <field name="dnk_active_model" invisible="1"/>
                    <field name="dnk_label_id" widget="radio" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}"/>
                    <field name="dnk_quantities_field_to_show" invisible="1"/>
                    <field name="dnk_labels_to_print_index_start" attrs="{'invisible': [('dnk_quantities_field_to_show','in',['none','just_total'])]}"/>
                    <field name="dnk_labels_to_print_index_stop" attrs="{'invisible': [('dnk_quantities_field_to_show','in',['none','just_total'])]}"/>
                    <field name="dnk_labels_to_print_qty" attrs="{'invisible': [('dnk_quantities_field_to_show','in',['none','start_and_end'])]}"/>
                </group>
                <footer>
                    <button type="special" special="cancel" string="Cancel"/>
                    <button string="Print labels" type="object" name="print_label" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>
    <record model="ir.actions.act_window" id="action_wizard_print_record_label_view">
        <field name="name">- Print Labels</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">dnk.wizard.print.record.label</field>
        <field name="view_mode">form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="target">new</field>
    </record>
</odoo>
