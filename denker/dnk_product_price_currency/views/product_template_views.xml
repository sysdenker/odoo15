<odoo>
    <!-- template form -->
    <record id="dnk_product_price_currency_product_template_form_view" model="ir.ui.view">
        <field name="name">product_computed_list_price.form</field>
        <field name="model">product.template</field>
        <!-- inherit common view -->
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="priority">8</field>
        <field name="arch" type="xml">
            <!-- to make it clearer, we make currency field visible -->
            <field name="currency_id" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <div name="pricing" position="after">
                <field name="dnk_company_currency_id" invisible="1"/>
                <field name="dnk_force_currency_id" groups="base.group_multi_currency" domain="[('id','!=',dnk_company_currency_id)]"/>
            </div>
        </field>
    </record>
</odoo>
