<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="dnk_show_sale_price_form_product_template">
        <field name="name">dnk_show_sale_price_form_product_template</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <label for="list_price" position="attributes">
                <attribute name="groups">dnk_product_hide_cost.dnk_show_sale_price</attribute>
            </label>
            <div name="pricing" position="attributes">
                <attribute name="groups">dnk_product_hide_cost.dnk_show_sale_price</attribute>
            </div>
            <field name="dnk_force_currency_id" position="attributes">
                <attribute name="groups">dnk_product_hide_cost.dnk_show_sale_price</attribute>
            </field>
            <label for="standard_price" position="attributes">
                <attribute name="groups">dnk_product_hide_cost.dnk_show_cost_price</attribute>
            </label>
            <div name="standard_price_uom" position="attributes">
                <attribute name="groups">dnk_product_hide_cost.dnk_show_cost_price</attribute>
            </div>
        </field>
    </record>

    <record model="ir.ui.view" id="dnk_show_sale_price_tree_product_template">
        <field name="name">dnk_show_sale_price_tree_product_template</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <field name="list_price" position="attributes">
                <attribute name="groups">dnk_product_hide_cost.dnk_show_sale_price</attribute>
            </field>
            <field name="standard_price" position="attributes">
                <attribute name="groups">dnk_product_hide_cost.dnk_show_cost_price</attribute>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="dnk_show_sale_price_kanban_product_template">
        <field name="name">dnk_show_sale_price_kanban_product_template</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_kanban_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div/div/ul/li[1]" position="attributes">
                <attribute name="groups">dnk_product_hide_cost.dnk_show_sale_price</attribute>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="dnk_show_sale_price_form_product_product">
        <field name="name">dnk_show_sale_price_form_product_product</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <label for="lst_price" position="attributes">
                <attribute name="groups">dnk_product_hide_cost.dnk_show_sale_price</attribute>
            </label>
            <field name="lst_price" position="attributes">
                <attribute name="groups">dnk_product_hide_cost.dnk_show_sale_price</attribute>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="dnk_show_sale_price_tree_product_product">
        <field name="name">dnk_show_sale_price_tree_product_product</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_product_tree_view"/>
        <field name="arch" type="xml">
            <field name="lst_price" position="attributes">
                <attribute name="groups">dnk_product_hide_cost.dnk_show_sale_price</attribute>
            </field>
            <field name="standard_price" position="attributes">
                <attribute name="groups">dnk_product_hide_cost.dnk_show_cost_price</attribute>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="dnk_show_sale_price_kanban_product">
        <field name="name">dnk_show_sale_price_kanban_product</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_kanban_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div/div[2]/ul/li[1]" position="attributes">
                <attribute name="groups">dnk_product_hide_cost.dnk_show_sale_price</attribute>
            </xpath>
        </field>
    </record>

