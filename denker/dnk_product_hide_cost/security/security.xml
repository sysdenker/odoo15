<odoo>
    <data noupdate="1">
        <record id="dnk_show_cost_price" model="res.groups">
            <field name="name">Show Cost Price</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
            <field name="comment">This group can see the Cost Price.</field>
            <field name="category_id" ref="dnk_groups_categories.dnk_product_category"/>
        </record>

        <record id="dnk_show_sale_price" model="res.groups">
            <field name="name">Show Sale Price</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
            <field name="comment">This group can see the Sale Price.</field>
            <field name="category_id" ref="dnk_groups_categories.dnk_product_category"/>
        </record>
    </data>
</odoo>
