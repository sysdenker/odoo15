<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
        <!-- Stock Picking -->
        <record id="dnk_eradicate_duplicate_purchase_order_form_view" model="ir.ui.view">
            <field name="name">dnk.eradicate.duplicate.purchase.order.form.view</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
				<xpath expr="//form" position="attributes">
					<attribute name="duplicate">0</attribute>
				</xpath>
            </field>
        </record>

		<record id="dnk_remain_duplicate_purchase_order_form_view" model="ir.ui.view">
			<field name="name">dnk.remain.duplicate.purchase.order.form.view</field>
			<field name="model">purchase.order</field>
			<field name="inherit_id" ref="purchase.purchase_order_form"/>
			<field name="groups_id" eval="[(4, ref('dnk_group_purchase_order_duplicate'))]"/>
			<field name="arch" type="xml">
				<xpath expr="//form" position="attributes">
					<attribute name="duplicate">1</attribute>
				</xpath>
			</field>
		</record>
	</data>
</odoo>
