<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
        <!-- MRP Priduction -->
        <record id="dnk_eradicate_duplicate_mrp_production_form_view" model="ir.ui.view">
            <field name="name">dnk.eradicate.duplicate.mrp.production.form.view</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="arch" type="xml">
				<xpath expr="//form" position="attributes">
				    <attribute name="duplicate">0</attribute>
				</xpath>
            </field>
        </record>

		<record id="dnk_remain_duplicate_mrp_production_form_view" model="ir.ui.view">
			<field name="name">dnk.remain.duplicate.mrp.production.form.view</field>
			<field name="model">mrp.production</field>
			<field name="inherit_id" ref="mrp.mrp_production_form_view"/>
			<field name="groups_id" eval="[(4, ref('dnk_group_account_mrp_production_duplicate'))]"/>
			<field name="arch" type="xml">
				<xpath expr="//form" position="attributes">
					<attribute name="duplicate">1</attribute>
				</xpath>
			</field>
		</record>
	</data>
</odoo>
