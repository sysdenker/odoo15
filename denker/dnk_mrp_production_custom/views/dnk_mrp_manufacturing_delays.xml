<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="dnk_mrp_manufacturing_delays_tree_view" model="ir.ui.view">
        <field name="name">dnk_mrp_manufacturing_delays_tree_view</field>
        <field name="model">dnk.mrp.manufacturing.delays</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <tree string="Manufacturing Delays">
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="dnk_mrp_manufacturing_delays_form_view" model="ir.ui.view">
        <field name="name">dnk_mrp_manufacturing_delays_form_view</field>
        <field name="model">dnk.mrp.manufacturing.delays</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <form string="Manufacturing Delays">
            <sheet>
                <div class="oe_title">
                    <label for="name" class="oe_edit_only"  string="- Manufacturing Delays"/>
                    <h1><field name="name"/></h1>
                </div>
                <group>
                    <label for="description"/>
                    <field name="description"/>
                    <group>
                    </group>
                </group>
            </sheet>
            </form>
        </field>
    </record>

    <record id="dnk_action_manufacturing_delays" model="ir.actions.act_window">
        <field name="name">Manufacturing Delays</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">dnk.mrp.manufacturing.delays</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create a manufacturing delay reason
            </p>
        </field>
    </record>

    <record id="action_mrp_manufacturing_delays_tree" model="ir.actions.act_window.view">
        <field eval="1" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="dnk_mrp_manufacturing_delays_tree_view"/>
        <field name="act_window_id" ref="dnk_action_manufacturing_delays"/>
    </record>

    <record id="action_mrp_manufacturing_delays_form" model="ir.actions.act_window.view">
        <field eval="1" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="dnk_mrp_manufacturing_delays_form_view"/>
        <field name="act_window_id" ref="dnk_action_manufacturing_delays"/>
    </record>

    <menuitem action="dnk_action_manufacturing_delays"
        id="menu_manufacturing_delays" name="- Manufacturing Delays"
        parent="mrp.menu_mrp_configuration" sequence="6"/>

</odoo>
