<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- TYPE -->
    <record id="dnk_asset_owner_tree_view" model="ir.ui.view">
         <field name="name">dnk_asset_owner_tree_view</field>
         <field name="model">dnk.asset.owner</field>
         <field name="arch" type="xml">
             <tree string="- Owner">
                 <field name="sequence" widget="handle" />
                 <field name="name"/>
                 <field name="fold"/>
             </tree>
         </field>
    </record>

    <record id="dnk_asset_owner_form_view" model="ir.ui.view">
         <field name="name">dnk_asset_owner_form_view</field>
         <field name="model">dnk.asset.owner</field>
         <field name="arch" type="xml">
             <form string="- Owner" >
             <sheet>
                <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                <group>
                    <field name="active" invisible="1"/>
                    <field name="name" />
                    <field name="description" />
                    <field name="fold" widget="boolean_toggle" invisible="1"/>
                </group>
             </sheet>
             </form>
         </field>
    </record>

    <record model="ir.actions.act_window" id="dnk_asset_owner_action">
        <field name="name">- Owner</field>
        <field name="res_model">dnk.asset.owner</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
    </record>

    <menuitem
        id="menu_asset_owner_configuration"
        name="- Asset Owner Options"
        parent="maintenance.menu_maintenance_configuration"
        action="dnk_asset_owner_action"
        groups="maintenance.group_equipment_manager"
        sequence="3" />
</odoo>
