<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="dnk_account_profit_margin_color_form_view" model="ir.ui.view">
		<field name="name">dnk_account_profit_margin_color_form_view</field>
		<field name="model">account.move</field>
		<field name="inherit_id" ref="account.view_move_form" />
		<field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='product_id']" position="after" >
                <field name="dnk_profit_margin_html"  widget = "color" invisible="0" readonly="1"/>
			</xpath>
        </field>
	</record>
</odoo>
