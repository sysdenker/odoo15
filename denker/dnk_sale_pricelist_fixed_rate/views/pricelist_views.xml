<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="dnk_fixed_rate_pricelist_form_view" model="ir.ui.view">
			 <field name="name">dnk.fixed.rate.pricelist.form.view</field>
			 <field name="model">product.pricelist</field>
			 <field name="inherit_id" ref="product.product_pricelist_view"/>
			 <field name="arch" type="xml">
				<xpath expr="//field[@name='currency_id']" position="before">
					<field name="dnk_use_usd_fixed_rate"/>
				</xpath>
			 </field>
		</record>

		<record id="dnk_fixed_rate_pricelist_tree_view" model="ir.ui.view">
			 <field name="name">dnk.fixed.rate.pricelist.tree.view</field>
			 <field name="model">product.pricelist</field>
			 <field name="inherit_id" ref="product.product_pricelist_view_tree"/>
			 <field name="arch" type="xml">
				<xpath expr="//field[@name='currency_id']" position="before">
					<field name="dnk_use_usd_fixed_rate"/>
				</xpath>
			 </field>
		</record>
	</data>
</odoo>
