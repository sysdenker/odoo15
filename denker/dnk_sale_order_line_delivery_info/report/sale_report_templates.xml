<odoo>
    <template id="dnk_report_saleorder_document_commitment_date" inherit_id="dnk_sale_order_custom_document.dnk_sale_order_custom_report_document">
        <th name="th_quantity" position="before">
            <th name="th_dnk_expected_date" t-if="doc.state not in ['draft','sent']">Expected Date</th>
            <th name="th_dnk_expected_date" t-if="doc.state in ['draft','sent']">Delivery Days</th>
        </th>

        <td name="td_quantity" position="before">
            <td name="td_dnk_expected_date" t-if="doc.state not in ['draft','sent']" class="text-right">
                <span t-field="line.dnk_expected_date"/>
            </td>
            <td name="td_dnk_delivery_days" t-if="doc.state in ['draft','sent']" class="text-right">
                <span t-field="line.dnk_delivery_days"/>
            </td>
        </td>
    </template>
</odoo>
