<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="dnk_attendance_report_view" model="ir.ui.view">
        <field name="name">Attendance Report</field>
        <field name="model">dnk.wizard.atendance.report</field>
        <field name="arch" type="xml">
        	<form>
        		<group col="4">
        			<field name="dnk_date_from" />
        			<field name="dnk_date_to" />
        		</group>
        		<footer>
	                <button name="check_report" string="- Print" type="object" default_focus="1" class="oe_highlight" />
	                or
	                <button string="Cancel" class="oe_link" special="cancel" />
	          </footer>
			</form>
        </field>
    </record>

  <record id="dnk_hr_employee_action_attendance_report" model="ir.actions.act_window">
        <field name="name">Attendance Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">dnk.wizard.atendance.report</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="dnk_attendance_report_view"/>
        <field name="binding_model_id" ref="hr.model_hr_employee"/>
        <field name="target">new</field>
  </record>
