    	<menuitem id="menu_dnk_hr_attendance_view_attendances" name="Attendances Report" parent="hr_attendance.menu_hr_attendance_manage_attendances" sequence="10" groups="hr_attendance.group_hr_attendance_user" action="dnk_hr_employee_action_attendance_report"/>
		-->
</odoo>
