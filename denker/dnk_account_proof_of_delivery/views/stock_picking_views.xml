<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="dnk_stock_picking_invoice_proof_of_delivery_datetime_tree_view" model="ir.ui.view">
            <field name="name">dnk.stock.picking.invoice.proof.of.delivery.datetime.tree.view</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.vpicktree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='origin']" position="after">
                    <field name="dnk_img_proof_of_delivery_datetime"/>
                </xpath>
            </field>
        </record>

        <record id="dnk_stock_picking_invoice_proof_of_delivery_datetime_form_view" model="ir.ui.view">
            <field name="name">dnk.stock.picking.invoice.proof.of.delivery.datetime.form.view</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='origin']" position="after">
                    <field name="dnk_img_proof_of_delivery_datetime"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
