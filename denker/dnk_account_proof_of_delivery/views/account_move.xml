<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="dnk_account_add_proof_of_delivery_form_view" model="ir.ui.view">
            <field name="name">dnk_account_add_proof_of_delivery_form_view</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <page name="other_info" position="after">
                    <page string="- Proof of Delivery" name="proof_of_delivery">
                        <group >
                            <field name="create_date" invisible="1"/>
                            <field name="dnk_proof_of_delivery_datetime" readonly="1"/>
                            <field name="dnk_proof_days" readonly="1"/>
                            <field name="dnk_proof_of_delivery" widget="image"/>
                        </group>
                    </page>
                </page>
            </field>
        </record>
    </data>
</odoo>
